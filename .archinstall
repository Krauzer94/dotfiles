# Partition
  cfdisk

# Formatting
  mkfs.ext4 /dev/sda2
  mkfs.fat -F 32 /dev/sda1

# Mounting
  mount /dev/sda2 /mnt
  mkdir -p /mnt/boot/efi
  mount /dev/sda1 /mnt/boot/efi

# Swap file
  mkswap -U clear --size 4G --file /mnt/swapfile
  swapon /mnt/swapfile

# Packages
  pacstrap /mnt linux linux-firmware base base-devel efibootmgr grub networkmanager pipewire bluez plasma-meta plasma-workspace sddm konsole dolphin ark spectacle nano flatpak openssh noto-fonts-cjk nvidia

# Fstab
  genfstab -U /mnt > /mnt/etc/fstab

# Chroot
  arch-chroot /mnt
  echo "archlinux" > /etc/hostname

# Users
  passwd
  useradd -m -G wheel -s /bin/bash krauzer
  passwd krauzer
  EDITOR=nano visudo

# Services
  systemctl enable sddm

# Bootloader
  grub-install /dev/sda
  grub-mkconfig -o /boot/grub/grub.cfg

# Done
  exit
  umount -a
  reboot
