# Partition
cfdisk

# Formating
mkfs.ext4 /dev/sda3
mkfs.fat -F 32 /dev/sda1
mkswap /dev/sda2

# Mounting
mount /dev/sda3 /mnt
mkdir -p /mnt/boot/efi
mount /dev/sda1 /mnt/boot/efi
swapon /dev/sda2

# Packages
pacstrap /mnt linux linux-firmware base base-devel efibootmgr grub networkmanager pipewire bluez plasma-meta plasma-workspace sddm konsole dolphin ark nano flatpak noto-fonts-cjk nvidia

# Fstab
genfstab -U /mnt > /mnt/etc/fstab

# Chroot
arch-chroot /mnt
nano /etc/hostname

# Users
passwd
useradd -m -G wheel -s /bin/bash krauzer
passwd krauzer
EDITOR=nano visudo

# Services
systemctl enable sddm

# Bootloader
grub-install /dev/sda
grub-mkconfig -o /boot/grub/grub.cfg

# Done
exit
reboot
